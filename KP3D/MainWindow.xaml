<Window x:Class="KP3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP3D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid Background="#FF343030" DockPanel.Dock="Right" Width="250px">
                <Slider HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Minimum="-15.708" Maximum="15.708" Name="longitude" Width="230" ValueChanged="longitude_ValueChanged"/>
                <Slider HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Minimum="-15.708" Maximum="15.708" Name="latitude" Width="230" ValueChanged="latitude_ValueChanged"/>
            </Grid>
            <Image Name="SceneView" Source="cat.jpg" Stretch="UniformToFill" MouseDown="SceneView_MouseDown" MouseWheel="SceneView_MouseWheel" MouseMove="SceneView_MouseMove"/>
        </DockPanel>

    </Grid>
</Window>
